<html>
  <head>
    <link
      rel="stylesheet"
      href="	https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="public/assets/css/style.css" />
    <script src="public/assets/js/contact.js"></script>
    <title>Personal Web - Nurul Anisah</title>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-gray">
      <div class="container">
        <a class="navbar-brand me-5" href="/">
          <img src="/public/assets/logo.png" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active me-3" aria-current="page" href="/"
                >Home</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link active"
                aria-current="page"
                href="/add-project"
                >Add Project</a
              >
            </li>
          </ul>
          <ul class="navbar-nav">
              {{#if isLogin}}
              <li class="nav-item">
                <a class="nav-link active" aria-current="page">{{user.name}},</a>
              </li>
              <li class="nav-item me-4">
                <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
              </li>
              {{else}}
              <li class="nav-item me-4">
                <a class="nav-link active" aria-current="page" href="/register">Register</a>
              </li>
              <li class="nav-item me-4">
                <a class="nav-link active" aria-current="page" href="/login">Login</a>
              </li>
              {{/if}}
          </ul>
          <a class="btn bg-black text-white active" aria-current="page" href="/contact-me"> Contact Me </a>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <div
      class="container-contact-form d-flex justify-content-center align-items-center">
      <form action="/login" method='POST'>
            {{#if messages.error}}
            <div class="alert alert-danger" role="alert">
            {{messages.error}}
            </div>
            {{/if}}
            {{#if messages.warning}}
            <div class="alert alert-warning" role="alert">
            {{messages.warning}}
            </div>
            {{/if}}
        <h1 class="text-center mb-3 fs-2 fw-bold">LOGIN TO YOUR ACCOUNT</h1>
        <div class="email-login mb-2 mt-5">
          <label for="inputEmail" class="form-label fs-6 fw-bolder">Email</label>
          <input
            type="email"
            class="form-control"
            id="loginEmail"
            name="loginEmail"
            placeholder="example@gmail.com..."
          />
        </div>
        <div class="pass-login mb-2 mt-4">
          <label for="input-title" class="form-label fs-6 fw-bolder">Password</label>
          <input
            type="password"
            class="form-control"
            id="loginPassword"
            name="loginPassword"
            placeholder=""
          />
        </div>
       
        
        <div class="text-end mt-4">
          <button onclick="submitForm()" class="btn bg-black text-white px-4">submit</button>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>